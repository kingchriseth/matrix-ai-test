        #matrix {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            pointer-events: none;
        }

        .column {
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 20px;
            height: 100%;
        }

        .digit {
            position: absolute;
            bottom: 0;
            font-size: 20px;
            opacity: 0;
            animation: fall 1s infinite linear;
