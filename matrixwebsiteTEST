    <script>
        // Matrix Digital Rain Effect
        const matrixContainer = document.getElementById('matrix');
        const chars = "0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz!@#$%^&*()_+";
        const numColumns = Math.floor(window.innerWidth / 20);
        const numRows = Math.floor(window.innerHeight / 20);

        function createColumn(xPosition) {
            const column = document.createElement('div');
            column.classList.add('column');
            column.style.left = `${xPosition * 20}px`;

            for (let i = 0; i < numRows; i++) {
                const digit = document.createElement('div');
                digit.classList.add('digit');
                digit.textContent = chars[Math.floor(Math.random() * chars.length)];
                column.appendChild(digit);
            }

            matrixContainer.appendChild(column);
            animateColumn(column);
        }

        function animateColumn(column) {
            const digits = column.getElementsByClassName('digit');
            let currentDigit = 0;
            setInterval(() => {
                digits[currentDigit].style.animationDuration = `${Math.random() * 2 + 0.5}s`;
                digits[currentDigit].style.bottom = `${Math.random() * window.innerHeight}px`;
                currentDigit = (currentDigit + 1) % digits.length;
            }, 50);
        }

        for (let i = 0; i < numColumns; i++) {
            createColumn(i);
        }

        // Resize the columns on window resize
        window.onresize = () => {
            matrixContainer.innerHTML = ''; // Clear current columns
            const newNumColumns = Math.floor(window.innerWidth / 20);
            for (let i = 0; i < newNumColumns; i++) {
                createColumn(i);
            }
        };
    </script>
